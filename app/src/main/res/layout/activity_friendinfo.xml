<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView1"
        style="@style/Text_TitleBar_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="添加设备好友" />

    <TextView
        android:id="@+id/friendinfo_confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确定向该设备及其主人发送加好友请求吗？"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/friendinfo_headpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal" 
        android:layout_marginTop="20dip"/>

    <TextView
        android:id="@+id/friendinfo_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

        <LinearLayout
        android:id="@+id/addfirend_linearlayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/addfirend_validation_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="验证消息："
            android:textSize="15sp" />

        <EditText
            android:id="@+id/addfirend_validation_msg_editText"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addfirend_linearlayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/addfirend_remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="备注名称："
            android:textSize="15sp" />

        <EditText
            android:id="@+id/addfirend_remark_editText"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingLeft="10dp" />
    </LinearLayout>
    
     <Button
        android:id="@+id/friendinfo_confirm_btn"
        style="@style/Text_TitleBar_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="confirmadd"
        android:text="发送"
        android:textColor="@color/Text_BLUE" 
        android:layout_gravity="center_horizontal" 
        android:layout_marginTop="30dip"/>

</LinearLayout>
