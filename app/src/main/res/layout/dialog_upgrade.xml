<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dimen_496"
        android:layout_height="@dimen/dimen_297"
        android:background="@drawable/upgrade_dialog_bg1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:layout_marginTop="@dimen/dimen_98"
            android:layout_marginLeft="@dimen/dimen_56"
            android:layout_marginRight="@dimen/dimen_56"
            android:gravity="left"
            android:textColor="@color/color_upgrade_desc"
            android:text="@string/upgrade_desc"
            android:textSize="@dimen/size_18"
            android:lineSpacingExtra="@dimen/dimen_3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_206"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/dimen_124"
                android:layout_height="@dimen/dimen_52"
                android:background="@drawable/upgrade_dialog_cancel"
                android:layout_marginLeft="@dimen/dimen_73"/>

            <Button
                android:id="@+id/btn_upgrade"
                android:layout_width="@dimen/dimen_124"
                android:layout_height="@dimen/dimen_52"
                android:background="@drawable/upgrade_dialog_upgrade"
                android:layout_marginLeft="@dimen/dimen_76"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>